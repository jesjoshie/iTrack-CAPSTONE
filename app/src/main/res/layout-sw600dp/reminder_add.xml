<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".reminder.reminderAdd">

    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/reminder_add_toolbar"
        app:contentInsetLeft="8dp"
        app:contentInsetStart="16dp"
        android:background="@color/aliceBlue"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:id="@+id/reminder_add_view"
        android:background="@color/baby_blue"
        android:orientation="vertical"
        android:layout_below="@id/reminder_add_toolbar">
        <EditText
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:minLines="4"
            android:lines="4"
            android:hint="Reminder Title"
            android:gravity="top|left"
            android:scrollHorizontally="false"
            android:id="@+id/reminder_title_ET"
            android:inputType="textCapWords|textMultiLine"
            android:layout_marginRight="16dp"
            android:layout_marginLeft="16dp"
            android:textColor="@color/black"
            android:textSize="25dp"/>
    </LinearLayout>
    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@id/reminder_add_view">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:divider="@color/medium_azure">

            <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:id="@+id/reminder_date_view">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_centerVertical="true"
                android:id="@+id/reminder_date_TV"
                android:text="Date"
                android:textSize="25dp"
                android:textColor="@color/black"/>
            <EditText
                android:layout_width="200dp"
                android:layout_height="match_parent"
                android:id="@+id/reminder_date_ET"
                android:onClick="setDate"
                android:layout_alignParentRight="true"
                android:layout_marginRight="16dp"
                android:hint="Set Date"
                android:layout_centerHorizontal="true"
                android:gravity="center"/>
        </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:id="@+id/reminder_time_view"
                android:layout_marginTop="10dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:layout_centerVertical="true"
                    android:id="@+id/reminder_time_TV"
                    android:text="Time"
                    android:textSize="25dp"
                    android:textColor="@color/black"/>
                <EditText
                    android:layout_width="200dp"
                    android:layout_height="match_parent"
                    android:id="@+id/reminder_time_ET"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="16dp"
                    android:hint="Set Time"
                    android:gravity="center"
                    android:onClick="setTime"
                    android:layout_centerHorizontal="true"
                    />

            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:id="@+id/reminder_repeat_view"
                android:layout_marginTop="10dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_centerVertical="true"
                android:id="@+id/reminder_repeat_view_TV"
                android:text="Repeat"
                android:textSize="25dp"
                android:textColor="@color/black"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/reminder_repeat_view_TV"
                    android:id="@+id/reminder_repeat_text"/>
            <Switch
                android:layout_width="200dp"
                android:layout_height="match_parent"
                android:id="@+id/reminder_repeat_view_switch"
                android:layout_alignParentRight="true"
                android:layout_marginRight="16dp"
                android:gravity="center"
                android:textOn="On"
                android:textOff="Off"
                android:checked="true"
                android:onClick="onSwitchRepeat"
                android:layout_centerHorizontal="true"
                />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:id="@+id/reminder_repeatIn_view"
                android:layout_marginTop="10dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:layout_centerVertical="true"
                    android:id="@+id/reminder_repeatIn_view_TV"
                    android:text="Repeat Interval"
                    android:textSize="25dp"
                    android:textColor="@color/black"/>

                <EditText
                    android:id="@+id/reminder_repeatIn_Et"
                    android:layout_width="200dp"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginRight="16dp"
                    android:checked="true"
                    android:clickable="true"
                    android:gravity="center"
                    android:hint="Set repeat"
                    android:onClick="setRepeatNo" />
            </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:id="@+id/reminder_repeat_type"
            android:clickable="true"
            android:onClick="selectRepeatType"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:background="?android:attr/selectableItemBackground">
           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="Repeatition Type"
               android:textSize="20dp"
               android:layout_marginLeft="16dp"
               android:layout_centerVertical="true"
               android:id="@+id/reminder_repeat_type_text"
               android:textColor="@color/material_on_background_emphasis_high_type"/>

            <TextView
                android:id="@+id/reminder_set_repeat_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="52dp"
                android:text="Set Repition Type"
                android:textColor="@color/material_on_background_emphasis_medium"
                android:textSize="15dp"
                android:clickable="true"
                android:onClick="selectRepeatType"/>
        </RelativeLayout>

        </LinearLayout>
    </ScrollView>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_below="@id/reminder_add_view"
        android:background="@drawable/dropshadow"/>
    <com.getbase.floatingactionbutton.FloatingActionButton
        android:layout_width="wrap_content"
        android:layout_height="24dp"
        android:id="@+id/reminder_starred1"
        android:clickable="true"
        android:onClick="selectFab1"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="160dp"
        app:fab_colorNormal="@color/red"
        app:fab_colorPressed="@color/medium_azure"
        app:fab_icon="@drawable/ic_action_notif2"
        app:fabSize="normal"
        android:layout_marginLeft="8dp"/>
    <com.getbase.floatingactionbutton.FloatingActionButton
        android:layout_width="wrap_content"
        android:layout_height="24dp"
        android:id="@+id/reminder_starred2"
        android:clickable="true"
        android:onClick="selectFab2"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="160dp"
        app:fab_colorNormal="@color/white"
        app:fab_colorPressed="@color/medium_azure"
        app:fab_icon="@drawable/ic_action_notif2"
        app:fabSize="normal"
        android:layout_marginLeft="8dp"/>
</RelativeLayout>