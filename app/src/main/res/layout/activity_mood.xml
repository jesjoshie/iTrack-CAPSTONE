<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_gravity="center"
    tools:context=".Mood">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_gravity="center">
        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="20dp"
            android:text="HOW ARE YOU?"
            android:textSize="15dp"
            android:textColor="@color/black"
            android:gravity="center"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:orientation="horizontal"
            >

            <CheckBox
                android:id="@+id/smile"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginLeft="60dp"
                android:layout_marginTop="0dp"
                android:background="@drawable/ic_smile"

                />

            <CheckBox
                android:id="@+id/good"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginLeft="3dp"
                android:layout_marginTop="0dp"
                android:background="@drawable/ic_happy"

                />
            <CheckBox
                android:background="@drawable/ic_confused"
                android:id="@+id/meh"
                android:layout_marginLeft="3dp"
                android:layout_marginTop="1dp"
                android:layout_width="60dp"
                android:layout_height="60dp"

                />
            <CheckBox
                android:id="@+id/sad"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginLeft="3dp"
                android:layout_marginTop="0dp"
                android:background="@drawable/ic_sad"


                />
            <CheckBox
                android:id="@+id/awful"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginLeft="3dp"
                android:layout_marginTop="0dp"
                android:background="@drawable/ic_angry"


                />

        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="WHAT HAVE YOU BEEN UP TO?"
                android:textSize="15dp"
                android:textColor="@color/black"
                android:gravity="center"/>
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="-5dp"
            android:layout_marginLeft="110dp"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <CheckBox
                android:layout_width="90dp"
                android:layout_height="20dp"
                android:id="@+id/family"
                android:text="Family"/>
            <CheckBox
                android:layout_width="90dp"
                android:layout_height="20dp"
                android:id="@+id/exercise"
                android:text="Exercise"/>

            <CheckBox
                android:layout_width="100dp"
                android:layout_height="20dp"
                android:id="@+id/date1"
                android:text="Date"/>
            <CheckBox
                android:layout_width="80dp"
                android:layout_height="20dp"
                android:id="@+id/sports"
                android:text="Sports"/>

            <CheckBox
                android:id="@+id/friends"
                android:layout_width="90dp"
                android:layout_height="26dp"
                android:text="Friends" />
            <CheckBox
                android:layout_width="80dp"
                android:layout_height="20dp"
                android:id="@+id/sleep"
                android:text="Sleep"/>

            <CheckBox
                android:layout_width="90dp"
                android:layout_height="20dp"
                android:id="@+id/movie"
                android:text="Movie"/>

            <CheckBox
                android:layout_width="90dp"
                android:layout_height="20dp"
                android:id="@+id/cleaning"
                android:text="Cleaning"/>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="JOURNAL"
                android:textSize="15dp"
                android:textColor="@color/black"
                android:layout_marginLeft="20dp"/>
        </LinearLayout>
        <EditText
            android:id="@+id/journal"
            android:layout_width="match_parent"
            android:layout_height="190dp"
            android:ems="10"
            android:inputType="textPersonName"
            android:hint="Insert text" />
        <Button

            android:id="@+id/submitButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Submit"/>



    </LinearLayout>




</LinearLayout>
